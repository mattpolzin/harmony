. ../setup.sh
. ./setup.sh

echo 'no subcommand:'
$harmony --bash-completion -- -- harmony

#
# config command
#
echo ''
echo 'no args suggests all settable props:'
$harmony --bash-completion config -- config

#
# pr command
#
echo ''
echo 'no args suggests into, ready, and draft args:'
$harmony --bash-completion pr -- pr

echo ''
echo 'draft pr suggests into arg:'
$harmony --bash-completion pr -- --draft

echo ''
echo 'into pr suggests draft arg:'
$harmony --bash-completion pr -- main

echo ''
echo 'ready pr only suggests into arg:'
$harmony --bash-completion pr -- --ready

. ./cleanup.sh
